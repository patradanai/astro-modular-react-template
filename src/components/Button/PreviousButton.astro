---
import { Picture } from 'astro:assets';

interface Props {
	title: string;
	path: string;
	imageSrc: string;
	imageAlt: string;
}

const { title, imageAlt, imageSrc ,path} = Astro.props;
---

<a href={path} class='group cursor-pointer'>
	<div class='flex md:w-[400px] flex-row gap-3'>
		<Picture
			class='hidden md:block size-24 rounded-lg object-cover'
			alt={imageAlt}
			format='webp'
			src={imageSrc}
			width={100}
			height={100}
			loading='lazy'
			fetchpriority='high'
		/>
		<div class='flex w-2/3 flex-col justify-between py-3'>
			<div class='flex gap-3'>
				&lt; <span class='font-semibold text-blue-500'>Previous article</span>
			</div>
			<div class='hidden md:block line-clamp-2 text-lg'>
				{ title }
			</div>
		</div>
	</div>
</a>
